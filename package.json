{
  "name": "inkureme",
  "version": "1.0.0",
  "private": true,
  "description": "Inkureme - Flight Delay Insurance Monorepo",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "contracts:build": "cd packages/contracts && forge build",
    "contracts:test": "cd packages/contracts && forge test",
    "contracts:deploy": "cd packages/contracts && forge script script/DeployAll.s.sol --rpc-url $RPC_URL --broadcast",
    "deploy": "bash scripts/deploy.sh",
    "deploy:local": "bash scripts/deploy.sh --network local",
    "deploy:kaia-testnet": "bash scripts/deploy.sh --network kaia-testnet",
    "deploy:kaia-mainnet": "bash scripts/deploy.sh --network kaia-mainnet",
    "frontend:dev": "cd packages/frontend && npm run dev",
    "frontend:build": "cd packages/frontend && npm run build",
    "liff:install": "npm install @line/liff@2.23.1 @line/liff-mini-dapp@1.0.0 ethers@5.7.2 caver-js@1.11.1",
    "liff:install-types": "npm install -D @types/line__liff"
  },
  "devDependencies": {
    "prettier": "^3.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
